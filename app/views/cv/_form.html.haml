.form
  = semantic_nested_form_for @cv, html: {class: 'form-horizontal' } do |f|
    .form-group
      = f.label :full_name
      = f.text_field :full_name, class: 'form-control'
    .form-group
      = f.label :salary
      = f.text_field :salary, class: 'form-control'
    .form-group
      = f.label :contacts
      = f.text_area :contacts, class: 'form-control'
    .form-group
      = f.input :status, class: 'checkbox'
    = f.submit t('save'), class: 'btn btn-default'
